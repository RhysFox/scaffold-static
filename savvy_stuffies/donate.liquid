    </div>

    <!-- Donation Options -->
    <div class="bg-light p-4 rounded mb-5">
      <h2 class="text-center mb-4">Ways to Give</h2>
      <div class="row">
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body text-center">
              <h3 class="card-title">One-Time Donation</h3>
