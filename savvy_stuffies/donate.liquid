  <!-- Main Content -->
  <main class="container my-5">
    <!-- Bootstrap 5 jumbotron-style hero section -->
    <div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Make a Difference Today</h1>
        <p class="col-md-8 fs-4">Your donation directly supports our mission to help children in need. Every contribution, no matter the size, creates a positive impact in our community.</p>
        <button class="btn btn-primary btn-lg" type="button" onclick="document.getElementById('donation-form').scrollIntoView({behavior: 'smooth'})">Donate Now</button>
