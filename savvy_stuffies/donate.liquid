  <script>
    // Show/hide custom amount field when "Other" is selected
    document.addEventListener('DOMContentLoaded', function() {
      const amountCustom = document.getElementById('amountCustom');
      const customAmountField = document.getElementById('customAmountField');
      
      if (amountCustom && customAmountField) {
        amountCustom.addEventListener('change', function() {
          if (this.checked) {
            customAmountField.style.display = 'block';
          } else {
            customAmountField.style.display = 'none';
          }
        });
        
        // Hide custom amount field when other amounts are selected
        const otherAmounts = document.querySelectorAll('input[name="donationAmount"]:not(#amountCustom)');
        otherAmounts.forEach(function(radio) {
          radio.addEventListener('change', function() {
            customAmountField.style.display = 'none';
          });
        });
      }
    });
  </script>
